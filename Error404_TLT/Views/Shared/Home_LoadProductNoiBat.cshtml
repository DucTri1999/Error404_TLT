@model IEnumerable<Error404_TLT.Models.Error404Entity.SanPham>

<div class="row">
    <!-- SẢN PHẨM NỔI BẬT -->
    <div class="featured-products-area">
        <div class="center-title-area">
            <h2 class="center-title">Sản Phẩm Nổi Bật</h2>
        </div>
        <div class="col-xs-12">
            <div class="row">
                <!-- FEARTURED-CAROUSEL START -->
                <div class="feartured-carousel">
                    @foreach (var item in Model)
                    {
                        <!-- SINGLE-PRODUCT-ITEM START -->
                        <div class="item">
                            <div class="single-product-item">
                                <div class="product-image">
                                    <a href="@Url.Action("Details", "Error404", new { id = item.MaSP})"><img src="~/Assets/@item.img" alt="product-image" /></a>
                                    <a href="#" class="new-mark-box">new</a>
                                    <div class="overlay-content">
                                        <div class="takeProductId" style="display:none">@item.MaSP</div>
                                        <a class="add-to-cart" href="" title="Add to cart"><i class="fa fa-shopping-cart"></i></a>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <div class="customar-comments-box">
                                        <div class="rating-box">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star-half-empty"></i>
                                        </div>
                                    </div>
                                    <a href="single-product.html">@item.TenSP</a>
                                    <div class="price-box">
                                        <span class="price">$ @item.DonGia</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- SINGLE-PRODUCT-ITEM END -->
                    }
                </div>
                <!-- FEARTURED-CAROUSEL END -->
            </div>
        </div>
    </div>
    <!-- FEATURED-PRODUCTS-AREA END -->
</div>
