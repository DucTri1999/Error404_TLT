@model IEnumerable<Error404_TLT.Models.Error404Entity.SanPham>

<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <!-- SALE-PRODUCTS START -->
    <div class="Sale-Products">
        <div class="left-title-area">
            <h2 class="left-title">Sản phẩm giảm giá</h2>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <!-- SẢN PHẨM GIẢM GIÁ -->
                    <div class="sale-carousel">
                        @foreach (var item in Model)
                        {
                            <!-- SALE-PRODUCTS-SINGLE-ITEM START -->
                            <div class="item">
                                <div class="new-product">
                                    <div class="single-product-item">
                                        <div class="product-image">
                                            <a href="@Url.Action("Details", "Error404", new { id = item.MaSP})"><img src="~/Assets/@item.img" alt="product-image" /></a>
                                            <a href="#" class="new-mark-box">sale</a>
                                            <div class="overlay-content">
                                                <div class="cart-action">
                                                    <div class="takeProductId" style="display:none">@item.MaSP</div>
                                                    <a class="add-to-cart" href="" title="Add to cart"><i class="fa fa-shopping-cart"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="product-info">
                                            <div class="customar-comments-box">
                                                <div class="rating-box">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-half-empty"></i>
                                                    <i class="fa fa-star-half-empty"></i>
                                                </div>
                                            </div>
                                            <a href="single-product.html">@item.TenSP</a>
                                            <div class="price-box">
                                                <span class="price">$ @item.GiaKM</span>
                                                <span class="old-price">$ @item.DonGia</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- SALE-PRODUCTS-SINGLE-ITEM END -->
                        }

                    </div>
                    <!-- SALE-CAROUSEL END -->
                </div>
            </div>
        </div>
    </div>
    <!-- SALE-PRODUCTS END -->
</div>