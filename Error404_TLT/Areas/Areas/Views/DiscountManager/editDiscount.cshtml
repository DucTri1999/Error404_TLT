@{ Error404_TLT.Areas.Areas.Controllers.DiscountManagerController PMC = new Error404_TLT.Areas.Areas.Controllers.DiscountManagerController(); }

@model Error404_TLT.Models.Error404Entity.Discount

<style>
    .table-wrapper {
        position: relative;
    }

    #table-scroll {
        height: 550px;
        overflow: auto;
    }

    #table-wrapper table {
        width: 70%;
        background: white;
        margin-left: 23.8%;
    }

    .tb_config th {
        position: sticky;
        top: 0px;
        background: #CCCCCC;
        z-index: 10;
        text-align: center;
    }

    .textarea {
        text-align: left;
    }

    .btn_Edit {
        border: none;
        color: white;
        background: #D10024;
        font-size: 20px;
    }

        .btn_Edit:hover {
            background: #FF0000;
        }
</style>
<div class="modal1-content" style="width: 43%; margin-left: 28.5%">
    <table class="cus2">
        <tr>
            <th colspan="2" style="background: rgb(58, 86, 119);">
                Sửa thông tin
            </th>
        </tr>
        <tr>
            <th style="width:150px;">
                <label>Tên sản phẩm</label>
            </th>
            <td>
                <input type="text" name="ProductsName" id="edit_productName" value="@Model.TenDC">
            </td>
        </tr>
        <tr>
            <th style="width:150px;">
                <label>Mô Tả</label>
            </th>
            <td>
                <input type="text" name="ProductPrice" id="edit_productMota" value="@Model.MoTa">
            </td>
        </tr>
        <tr>
            <th style="width:150px;">
                <label>Giảm</label>
            </th>
            <td>
                <input type="text" name="ProductPrice" id="edit_productGiam" value="@Model.Giam">
            </td>
        </tr>
    </table>

</div>
<input class="btn_Edit" type="button" value="Cập Nhật" style="margin-left: 61.5%; width: 10%" />

<script>
    $(".btn_Edit").click(function () {
        var DCID = document.getElementById("edit_productId").value;
        alert(DCID);
        var TenDC = document.getElementById("edit_productName").value;

        var MoTa = document.getElementById("edit_productMota").value;

        var Giam = document.getElementById("edit_productGiam").value;
        $.ajax({
            url: '@Url.Action("upDiscount", "DiscountManager")',
            type: 'POST',
            data: {
                DCID='@Model.DCID',
                TenDC=TenDC,
                MoTa=MoTa,
                Giam=Giam
            },
            success: function (result) {
                location.reload();
            },
            error: function () {
                alert("Sửa Thất Bại");
            },
        });
    });
</script>




