@{ Error404_TLT.Areas.Areas.Controllers.DiscountManagerController PMC = new Error404_TLT.Areas.Areas.Controllers.DiscountManagerController(); }

<style>
    .btn_Add {
        border: none;
        color: white;
        background: #D10024;
        font-size: 20px;
    }

        .btn_Add:hover {
            background: #FF0000;
        }
</style>

<div class="modal1" style="width: 43%; margin-left: 28.5%">

    <table class="cus2">
        <tr>
            <th colspan="2" style="background: rgb(58, 86, 119);">
                <div>
                    <h1>Thêm Sản Phẩm Giảm</h1>
                </div>
            </th>
        </tr>
        <tr>
            <th style="width:150px;">
                <label>Mã Giảm</label>
            </th>
            <td>
                <input type="text" name="ProductPrice" id="add_productId" placeholder="...">
            </td>
        </tr>
        <tr>
            <th style="width:150px;">
                <label>Tên Sản Phẩm Giảm</label>
            </th>
            <td>
                <input type="text" name="ProductsName" id="add_productName" placeholder="...">
            </td>
        </tr>
        <tr>
            <th>
                <label>Mô tả</label>
            </th>
            <td>
                <textarea class="textarea" id="add_productMota" name="Config" placeholder="..."></textarea>
            </td>
        </tr>
        <tr>
            <th style="width:150px;">
                <label>Giảm</label>
            </th>
            <td>
                <input type="text" name="ProductPrice" id="add_productGiam" placeholder="...">
            </td>
        </tr>
    </table>
</div>

<input class="btn_Add" type="button" value="Thêm" style="margin-left: 61.5%; width: 10%" />
<!-- ============================================================== -->
<script>
    // Chỉnh sửa thông tin sản phẩm
    $(".btn_Add").click(function () {
        //thông tin sản phẩm
        var DCID = document.getElementById("add_productId").value;
        var TenDC = document.getElementById("add_productName").value;
        var MoTa = document.getElementById("add_productMota").value;
        var Giam = document.getElementById("add_productGiam").value;

        alert(DCID + TenDC + MoTa +Giam);

        //ajax-start
        $.ajax({
            url: '@Url.Action("addDC", "DiscountManager")',
            type: 'POST',
            data: {
                DCID : DCID,
                TenDC : TenDC,
                MoTa : MoTa,
                Giam : Giam
            },
            success: function () {
                location.reload();
            },
            error: function () {
                alert("fail");
            },
        });
        //ajax-end
    });
</script>

