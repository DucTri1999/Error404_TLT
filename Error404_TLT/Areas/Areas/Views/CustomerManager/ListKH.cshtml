
@{
    ViewBag.Title = "ListKH";
    Layout = "~/Areas/Areas/Views/Shared/MainLayoutAdmin.cshtml";
}

<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper" style="min-height: 250px;" id="productManager">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <h2 style="padding-top:15px">
                DANH SÁCH KHÁCH HÀNG
            </h2>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12 container white-box">
                <table id="example" class="table  table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr style="text-align: center; ">
                            <th style="font-size:15px;">Tên tài khoản</th>
                            <th style="font-size:15px;">Họ và tên</th>
                            <th style="font-size:15px;">Số điện thoại</th>
                            <th style="font-size:15px;">Thành Phố</th>
                            <th style="font-size:15px;">Quận</th>
                            <th style="font-size:15px;">Phường</th>
                            <th style="font-size:15px;">Địa chỉ</th>
                        </tr>
                    </thead>
                    @{
                        Error404_TLT.Areas.Areas.Controllers.CustomerManagerController HC = new Error404_TLT.Areas.Areas.Controllers.CustomerManagerController();

                        IEnumerable<Error404_TLT.Models.Error404Entity.KhachHang> listCustomer = HC.loadCustomer();

                    }

                    <tbody>
                        @foreach (var item in listCustomer)
                        {
                            <tr style="text-align: center;font-size: 13px;">
                                <td class="click_Product productId">@item.User</td>
                                <td class="click_Product">@item.FullName</td>
                                <td class="click_Product">@item.SDT</td>
                                <td class="click_Product">@item.ThanhPho</td>
                                <td class="click_Product">@item.Quan</td>
                                <td class="click_Product">@item.Phuong</td>
                                <td class="click_Product">@item.Address</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div id="CTOrder" class="modal" style="z-index: 50;">


                </div>
            </div>
        </div>
    </div>
</div>

